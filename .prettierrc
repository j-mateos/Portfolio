{
    "singleQuote": true,
    "semi": false,
    "trailingComma": "es5",
    "printWidth": 100,
    "tabWidth": 4,
    "bracketSpacing": false,
    "arrowParens": "always",
    "endOfLine": "auto",
    "overrides": [
        {
            "files": ["*.yml", "*.yaml"],
            "options": {
                "tabWidth": 2,
                "useTabs": false
            }
        }
    ]
}
